<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddVehicleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Image"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/vehicle_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_car"
                android:scaleType="centerCrop"
                android:onClick="selectVehicleImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance Image"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/insurance_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_car"
                android:scaleType="centerCrop"
                android:onClick="selectInsuranceImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Name"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/vehicle_name_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_background"
                android:hint=" Enter vehicle name"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Type"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/vehicle_type_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_background"
                android:hint=" Enter vehicle type"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Registration Number"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/vehicle_reg_number_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_background"
                android:hint=" Enter vehicle registration number"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Colour"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/vehicle_colour_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_background"
                android:hint=" Enter vehicle colour"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats Offering"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/seats_offering_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_background"
                android:hint=" Enter available seats"
                android:inputType="number" />

            <Button
                android:id="@+id/add_vehicle_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FF9800"
                android:text="Add"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>